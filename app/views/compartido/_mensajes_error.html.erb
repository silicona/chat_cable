<% if @usuario.errors.any? %>
  <div id="explicacion_error">
    <div class="alert alert-danger">
      El formulario contiene <%= pluralize(@usuario.errors.count, "error", plural: "errores") %>.
    </div>
    <ul>
    <% @usuario.errors.full_messages.each do |mensaje| %>
      <li><%= mensaje %></li>
    <% end %>
    </ul>
  </div>
<% end %>